<!DOCTYPE html>
<html>
<head>
	<title>Post</title>
</head>
<body style="background-color: lightgray">
	<h1> All Posts</h1>

	

	<table border="1">
		<tr>
			<td>ID</td>
			<td>Title</td>
			<td>Status</td>
			<td>Description</td>
			<td>Price</td>
			<td>Action</td>


		</tr>

		<% 
			posts.forEach( function(pst){ %>
			<tr>
				<td><%= pst.id %></td>
				<td><%= pst.title %></td>
				<td><%= pst.status %></td>
				<td><%= pst.post_body %></td>
				<td><%= pst.amount %></td>
		
				<td>
					<a href="/buyer/edit_post/<%= pst.id %>"><button style="color: #28798F">Edit</button></a> |
					<a href="/buyer/delete/<%= pst.id %>"><button style="color: red">Delete</button></a> |
					<a href="<%= pst.id %>"><button style="color: green">Available</button></a> |
					<a href="<%= pst.id %>"><button style="color: #8F2836">Unavailable</button></a>

				</td>
			</tr>

		<%
			}); 
		%>
		
	</table><br>
	<a href="/buyer/buyerController"><button style="background-color: #5AA9D6">Back</button></a>
	<br>
</body>
</html>