<!DOCTYPE html>
<html>
<head>
	<title>Sellers</title>
</head>
<body style="background-color: #BCD6CA">
	<h1>Seller List</h1><br>
	<input type="text" name="search" placeholder="search by category">
	<a href="" ><button>Search</button></a><br><br>

	

	<table border="1">
		<tr>
			<td>ID</td>
			<td>Name</td>
			<td>Category</td>
			<td>Buyer Name</td>
			<td>Project Title</td>
			<td>Action</td>


		</tr>

		<% 
			sellers.forEach( function(s){ %>
			<tr>
				<td><%= s.user_id %></td>
				<td><%= s.name %></td>
				<td><%= s.category_name %></td>
				<td><%= s.buyer_name %></td>
				<td><%= s.project_title %></td>
		
				<td>
					<a href="/buyer/message/<%=s.user_id%>"><button style="background-color: green;">Message</button></a>

				</td>
			</tr>

		<%
			}); 
		%>
		
	</table>
	<br>
	<a href="/buyer/buyerController"><button style="background-color: #5AA9D6">Back</button></a>
</body>
</html>