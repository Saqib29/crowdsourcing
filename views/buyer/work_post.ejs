<!DOCTYPE html>
<html>
<head>
	<title>Post</title>
</head>
<body>
	<form method="post">
		<fieldset>
			<legend>New Post</legend>
			<table>
				<tr>
					<td>ID</td>
					<td><input type="text" name="id" value="<%=id%>" readonly></td>
				</tr>
				<tr>
					<td>Name</td>
					<td><input type="text" name="name" value="<%=fname%>" readonly></td>
				</tr>
				<tr>
					<td>Title</td>
					<td><textarea name="title" rows="2" cols="40">
					</textarea></td>
				</tr>
				<tr>
					<td>Status</td>
					<td><input type="text" name="status"></td>
				</tr>
				<tr>
					<td>Description</td>
					<td><textarea name="post_body" rows="6" cols="50">
					</textarea></td>
				</tr>
				<tr>
					<td>Price</td>
					<td><input type="text" name="amount"></td>
				</tr>
				

				<tr>
					<td></td>
					<td><input type="submit" name="submit" value="Submit"></td>
				</tr>
			</table>
			
		</fieldset>
		<br>
		<br>
	</form>
</body>
</html>